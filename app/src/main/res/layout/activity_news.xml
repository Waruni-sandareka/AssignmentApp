<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d6c7e6"
        android:orientation="vertical">

    <!-- RecyclerView for dynamic news list -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false" />

    <!-- Footer with 3 icon buttons -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2A0B30"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

        <ImageButton
                android:id="@+id/btn_news"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circular_btn"
                android:src="@drawable/code"
                android:contentDescription="News"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="#260C2B" />

        <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/circular_btn"
                android:src="@drawable/ticket"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="#FF260C2B" />

        <ImageButton
                android:id="@+id/btn_dev_info"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/circular_btn"
                android:src="@drawable/user"
                android:contentDescription="Developer Info"
                android:scaleType="centerInside"
                android:padding="8dp"
                app:tint="#FF260C2B" />
    </LinearLayout>
</LinearLayout>
