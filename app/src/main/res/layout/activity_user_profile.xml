<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d6c7e6"
        android:orientation="vertical"
        android:padding="16dp">

    <ImageView
            android:id="@+id/profileImage"
            android:background="@drawable/edit_text_background"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:layout_marginTop="30dp"
            android:strokeWidth="9.0"
            android:strokeColor="#4b2f61" />

    <TextView
            android:id="@+id/username"
            android:layout_width="286dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp" />

    <TextView
            android:id="@+id/email"
            android:layout_width="274dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp" />

    <Button
            android:id="@+id/editInfoBtn"
            android:layout_width="327dp"
            android:layout_marginLeft="15dp"
            android:layout_height="70dp"
            android:text="Edit Info"
            android:textColor="#f3eff8"
            android:backgroundTint="#4b2f61"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/signOutBtn"
            android:layout_width="329dp"
            android:layout_marginLeft="15dp"
            android:layout_height="70dp"
            android:text="Sign Out"
            android:textColor="#f3eff8"
            android:backgroundTint="#4b2f61"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/devInfoBtn"
            android:layout_width="145dp"
            android:layout_height="71dp"
            android:text="Dev Info"
            android:textColor="#EDE7F1"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginTop="18dp" />
</LinearLayout>